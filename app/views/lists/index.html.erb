<div class="container">
  <h1 class="text-dark">Movies list</h1>
  <div class="cards">
    <% @lists.each do |list| %>
       <div class="banner m-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://pyxis.nymag.com/v1/imgs/51b/28a/622789406b8850203e2637d657d5a0e0c3-avatar-rerelease.1x.rsquare.w1400.jpg' %>);">
        <div class="container">
          <h2><%= link_to list.name, list_path(list), class: 'text-decoration-none text-light'%> </h2>
          <p><%= link_to "See movies", list_path(list), class: "btn btn-primary" %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex align-items-center justify-content-between mb-3">
    <%# <h3 class="mb-0">My Lists</h3> %>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary" %>
  </div>
</div>
