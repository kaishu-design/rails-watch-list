<div class="container">
  <h1>Movies list</h1>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-product">
        <div class="card-product-infos p-3 text-primary-emphasis bg-primary-subtle border border-primary-subtle rounded-3">
          <h2><%= link_to list.name, list_path(list), class: 'text-decoration-none text-dark'%> </h2>
          <p><%= link_to "See movies", list_path(list), class: "btn btn-primary" %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>
</div>
